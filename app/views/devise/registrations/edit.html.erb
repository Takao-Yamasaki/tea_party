<h2>アカウントを編集する</h2>

<div class="card col-md-6" >
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group col-md-12">
      <% #姓の追加 %>
      <%= f.label :first_name, "姓"%>
      <%= f.text_field :first_name, class: "form-control", placeholder: "姓" %>
    </div>

    <div class="form-group col-md-12">
    <% #名の追加 %>
    <%= f.label :last_name, "名"%>
    <%= f.text_field :last_name, class: "form-control", placeholder: "名" %>
    </div>

    <div class="form-group col-md-12">
    <% #プロフィール画像の追加 %>
    <%= f.label :image, "プロフィール画像" %><br/>
    <%=f.file_field :image, accept: "image/png,image/jpeg,image/gif" %>
    </div>

    <div class="form-group col-md-12">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Eメール" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="form-group col-md-12"><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email, class: "form-control") %></div>
    <% end %>

    <div class="form-group col-md-12">
      <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %>
    </div>

    <div class="form-group col-md-12">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
    </div>

    <div class="form-group col-md-12">
      <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
    </div>

    <div class="actions form-group">
      <%= f.submit t('.update'), class: "btn btn-default" %>
    </div>
  <% end %>
</div>

<div class="my-4">
  <h1>アカウントを削除する</h1>
  <div class="card col-md-6">
    <p>気に入らないので、削除します <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: "btn btn-default" %></p>
  </div>
<div>
