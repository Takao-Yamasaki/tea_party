<!DOCTYPE html>
<html>
  <head>
    <title>Teaparty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=ddevise-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= render "layouts/header" %>
      <% if user_signed_in? %>
        <%= link_to "一覧画面へ", experiences_path %>
        <%= link_to "アカウント編集", edit_user_registration_path %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか？"} %>
      <% else %>
        <%= link_to "一覧画面へ", experiences_path %>
        <%= link_to "ログイン", new_user_session_path %>
        <%= link_to "アカウント登録", new_user_registration_path %>
      <% end %>
    </header>
    <main>
      <%= render "layouts/flash" %>
      <div class="base-container">
         <%= yield %>
      </div>
    </main>
  </body>
</html>
